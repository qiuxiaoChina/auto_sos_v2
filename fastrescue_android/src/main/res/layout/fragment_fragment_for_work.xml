<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/mainPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <RelativeLayout
       android:id="@+id/head_map_tel_navi"
       android:layout_width="match_parent"
       android:layout_height="74dp"
       android:background="#ffffff"
       android:visibility="gone">


        <RelativeLayout
            android:layout_width="235dp"
            android:layout_height="47dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_destination"
                    android:layout_width="11dp"
                    android:layout_height="16dp"
                    android:src="@drawable/destination1"
                    />

                <TextView
                    android:id="@+id/destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="鄞州科技信息孵化园"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/distance_route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:text="总路程:0.0km"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/distance_moved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:text="已行驶:0.0km"
                    android:layout_marginLeft="20dp"
                    android:textSize="16sp"/>


            </LinearLayout>


           
        </RelativeLayout>
       <ImageView
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:layout_marginRight="20dp"
           android:src="@drawable/tel_big"/>

   </RelativeLayout>


    <LinearLayout
        android:id="@+id/head_map"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/switch_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/off_line"
            android:gravity="center"
            android:text="离线"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <com.amap.api.navi.AMapNaviView
        android:id="@+id/navi_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_map_tel_navi"
        android:visibility="gone"
        />
        <!--android:layout_below="@+id/head_map_tel_navi"-->

    <com.amap.api.maps.TextureMapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head_map"

        />

    <com.amap.api.maps.TextureMapView
        android:id="@+id/mapviewForShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head_map"
        android:visibility="gone" />



        <RelativeLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            >

            <LinearLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_alignParentBottom="true">
            </LinearLayout>

            <Button
                android:id="@+id/tel_customer"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="#ffffff"
                android:text="联系车主"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:textColor="#aaaaaa"
                android:drawableTop="@drawable/tel_small"
                android:drawablePadding="4dp"
                />

            <Button
                android:id="@+id/cancel_order"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="#ffffff"
                android:text="取消订单"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="#aaaaaa"
                android:drawableTop="@drawable/cancel"
                android:drawablePadding="4dp"
                />

            <ImageView
                android:id="@+id/take_photo"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="23dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/photo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="到达救援现场,并拍照"
                android:layout_alignParentBottom="true"
                android:textSize="12sp"
                android:textColor="#aaaaaa"
                android:layout_marginBottom="4dp"
                />

        </RelativeLayout>


   </RelativeLayout>

    <com.autosos.yd.Layout.MyRaletiveLayout
        android:id="@+id/newOrder"
        android:layout_width="333dp"
        android:layout_height="450dp"
        android:background="@mipmap/order_background"
        android:layout_centerInParent="true"
        android:visibility="gone"
        >

        <View
            android:id="@+id/closeNewOrder"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="29dp"
            android:src="@mipmap/order_start"
            android:layout_marginTop="52dp"
            android:layout_marginLeft="73dp"/>
        <ImageView
            android:layout_width="22dp"
            android:layout_height="29dp"
            android:src="@mipmap/order_end"
            android:layout_alignParentRight="true"
            android:layout_marginTop="52dp"
            android:layout_marginRight="73dp"/>

        <ImageView
            android:layout_width="84dp"
            android:layout_height="2dp"
            android:src="@drawable/fill_line"
            android:layout_marginTop="62dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="鄞州区日丽中路557号"
            android:textSize="14sp"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="#333333"
            android:layout_marginTop="91dp"
            android:layout_marginLeft="41dp"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="姜山镇姜明哈哈哈哈哈哈哈哈"
            android:textSize="14sp"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="#333333"
            android:layout_alignParentRight="true"
            android:layout_marginTop="91dp"
            android:layout_marginRight="41dp"/>


        <View

            android:layout_width="327dp"
            android:layout_height="2dp"
            android:background="@drawable/dot_line"
            android:layout_marginTop="127dp"
            android:layout_centerHorizontal="true"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新的订单"
            android:textSize="28sp"
            android:textColor="#333333"
            android:layout_marginTop="152dp"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="200dp"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="16sp"
                android:textColor="#20b48b"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="355.00"
                android:textSize="26sp"
                android:textColor="#20b48b"/>

        </LinearLayout>


        <View
            android:id="@+id/intoOrder"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:background="@drawable/order_button_selector"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            />


    </com.autosos.yd.Layout.MyRaletiveLayout>


    <include layout="@layout/progressbar_layout" />

    <Button
        android:id="@+id/starNavi"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:background="@drawable/navigation_nor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="115dp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/coursePreview"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:background="@drawable/course_selector"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="70dp"
        android:visibility="gone"
        />


</RelativeLayout>
