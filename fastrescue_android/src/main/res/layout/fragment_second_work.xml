    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/main_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <RelativeLayout
            android:id="@+id/btn_action"
            android:layout_below="@+id/info_view"
            android:background="@color/color_white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:visibility="visible"
                android:background="@color/color_green5"
                android:id="@+id/btn_action_up"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="180dp">
                 <Button
                     android:textSize="15dp"
                     android:onClick="start"
                     android:textColor="#359960"
                     android:id="@+id/startBtn"
                     android:background="@drawable/bg_btn_second_white"
                     android:layout_gravity="center_horizontal"
                     android:text="@string/label_start_order"
                     android:layout_width="120dp"
                     android:layout_height="120dp"
                     android:layout_alignParentTop="true"
                     android:layout_centerHorizontal="true" />

               <ImageView
                   android:id="@+id/image_circle"
                   android:scaleType="fitXY"
                   android:layout_width="fill_parent"
                   android:layout_height="25dp"
                   android:src="@drawable/icon_second_work"
                   android:layout_above="@+id/linearLayout3"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="#f8f8f8"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/linearLayout3">


                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/info_view"
        android:background="@color/color_green5"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/address_layout"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:background="@drawable/bg_shape_second_white_lucency"
            android:layout_height="28dp">
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <ImageView
                android:src="@drawable/icon_location"
                android:layout_width="19dp"
                android:layout_height="19dp" />

            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="6dp"
                android:textSize="12sp"
                android:text=""
                android:id="@+id/address"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"/>

        </LinearLayout>

        <TextView
            android:layout_below="@+id/address_layout"
            android:layout_marginTop="25dp"
            android:text="@string/label_time_counter"
            android:id="@+id/timecounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
             />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="-2dp"
        android:layout_below="@+id/info_view"
        android:background="@color/color_green5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="15dp"
            android:id="@+id/stopBtn"
            android:textColor="@color/color_white"
            android:background="@drawable/bg_shape_second_white_lucency"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:text="停止接单"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <LinearLayout
        android:visibility="visible"
        android:background="@color/color_white"
        android:id="@+id/list_info"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/btn_action">


        <LinearLayout
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_total"
                android:textColor="@color/color_black2"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#53a9f1"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_dan"
                    android:textColor="@color/color_black1"
                    android:textSize="@dimen/medium_text_size1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_comment"
                android:textColor="@color/color_black2"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff9626"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_comments"
                    android:textColor="@color/color_black1"
                    android:textSize="@dimen/medium_text_size1" />
                </LinearLayout>
             </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

    <View
        android:visibility="gone"
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_layout"
        android:background="@color/activityBackground" />

    <include
        layout="@layout/progressbar_layout"
        android:visibility="visible"
        android:id="@+id/include2" />

    <TextView
        android:id="@+id/test_label"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="测试版本"/>
</RelativeLayout>
