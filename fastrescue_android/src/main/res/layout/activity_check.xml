<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <ImageView
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="35dp"
        android:textColor="#999999"
        android:textSize="15sp"
        android:gravity="center"
        android:text="您正在用新手机登录e救援\n我们需要验证您的身份"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:onClick="sendMessage"
        android:textSize="15sp"
        android:id="@+id/Button_modification"
        android:textColor="@color/color_white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="通过短信方式验证身份"
        android:background="@drawable/bg_shape_second_green"
        />

    <Button
        android:onClick="showSuggest"
        android:textSize="15sp"
        android:textColor="#737373"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="手机不在身边？"
        android:background="@drawable/bg_shape_second_white"
        />


</LinearLayout>