<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/no_more_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|top"
        android:padding="10dp"
        android:text="@string/label_no_more"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/medium_text_size2"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        >

        <!--<ProgressBar-->
            <!--android:id="@+id/xlistview_footer_progressbar"-->
            <!--style="?android:attr/progressBarStyleSmall"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:indeterminateDrawable="@drawable/sp_rotate_refresh_progressbar"-->
            <!--android:indeterminateDuration="800" />-->

        <ProgressBar android:id="@+id/ProgressBar01" style="@style/runcar"
            android:layout_width="50dp" android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"></ProgressBar>
        <TextView
            android:id="@+id/xlistview_footer_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xlistview_header_hint_loading"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/medium_text_size2" />
    </LinearLayout>

</LinearLayout>