<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.autosos.rescue.view.ChangePwdActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#20b48b">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"/>

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="#ffffff"
            android:textSize="18dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码必须为6到18位的数字或字母,区分大小写"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:textColor="#333333"
        android:layout_marginTop="70dp"/>

    <EditText
        android:id="@+id/password"
        android:drawableLeft="@drawable/login_password"
        android:drawablePadding="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:singleLine="true"
        android:layout_below="@+id/username"
        android:layout_width="317dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:hint="请输入您的旧密码..."
        android:inputType="textPassword"
        android:paddingRight="15dp"
        android:textColor="#333333"
        android:textColorHint="@color/color_gray"
        android:textCursorDrawable="@null"
        android:textSize="12sp"
        android:background="@drawable/bg_edittext"/>

    <EditText
        android:id="@+id/new_password"
        android:drawableLeft="@drawable/login_password"
        android:drawablePadding="10dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:singleLine="true"
        android:layout_below="@+id/username"
        android:layout_width="317dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:hint="请输入您的新密码..."
        android:inputType="textPassword"
        android:paddingRight="15dp"
        android:textColor="#333333"
        android:textColorHint="@color/color_gray"
        android:textCursorDrawable="@null"
        android:textSize="12sp"
        android:background="@drawable/bg_edittext"/>

    <EditText
        android:id="@+id/new_password1"
        android:drawableLeft="@drawable/login_password"
        android:drawablePadding="10dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:singleLine="true"
        android:layout_below="@+id/username"
        android:layout_width="317dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:hint="请再次输入您的新密码..."
        android:inputType="textPassword"
        android:paddingRight="15dp"
        android:textColor="#333333"
        android:textColorHint="@color/color_gray"
        android:textCursorDrawable="@null"
        android:textSize="12sp"
        android:background="@drawable/bg_edittext"/>


    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_changePwd"
        android:layout_width="317dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_btn_selector_new_way"
        android:text="修改密码"
        android:textColor="#fff"
        android:layout_marginTop="290dp"
        />

    <include layout="@layout/progressbar_layout" />
</RelativeLayout>
