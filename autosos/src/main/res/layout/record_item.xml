<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="116dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="11dp"
    android:descendantFocusability="blocksDescendants">
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:text="拖车"
                android:id="@+id/service_type"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_shape_orange"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:layout_marginLeft="14dp"/>

            <TextView
                android:text="抛单"
                android:id="@+id/order_type"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_shape_orange"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:layout_marginLeft="54dp" />

            <TextView
                android:id="@+id/date"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:text="2014年12月3日 17:56"
                android:layout_marginLeft="94dp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                />


            <TextView
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:text="330元"
                android:layout_marginLeft="80dp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:layout_alignParentRight="true"
                android:layout_marginRight="55dp"
                android:textSize="12sp"
                />

            <TextView
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:text="已支付"
                android:layout_marginLeft="80dp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_status"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:textSize="12sp"
                />



        </RelativeLayout>

        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:orientation="vertical"
                android:layout_marginLeft="14dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/start_point"/>
                <View android:layout_height="20dp"
                    android:layout_width="1dp"
                    android:background="#CCCCCC"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/end_point"/>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp">
                <HorizontalScrollView
                    android:layout_height="wrap_content"
                    android:layout_width="180dp"
                    android:scrollbars="none">
                    <TextView
                        android:id="@+id/destination1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:singleLine="true"
                        />

                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/destination2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:singleLine="true"
                        />

                </HorizontalScrollView>

            </RelativeLayout>


            <TextView
                android:id="@+id/carNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:text="浙B12345"
                android:textSize="12sp"/>
            
        </RelativeLayout>




    </LinearLayout>



    <View
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_gray2" />


</RelativeLayout>