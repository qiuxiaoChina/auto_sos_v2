<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#20b48b"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="救援详情"
            android:textColor="#ffffff"
            android:textSize="18sp"

            />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/hint_pay_detail"
        android:layout_width="287dp"
        android:layout_height="21dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="84dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#AAAAAA" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="18dp"
            android:text="支付详情"
            android:textColor="#999999"
            android:textSize="14sp"

            />

        <View
            android:layout_width="84dp"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#AAAAAA" />

    </RelativeLayout>


   <LinearLayout
       android:layout_below="@+id/hint_pay_detail"
       android:layout_width="287dp"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp">

       <RelativeLayout
           android:layout_width="107dp"
           android:layout_height="42dp"
           android:layout_gravity="center_horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#333333"
               android:text="347.0"
               android:textSize="37sp"
               android:layout_alignParentLeft="true"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="17dp"
               android:textColor="#333333"
               android:text="元"
               android:textSize="14sp"
               android:layout_alignParentRight="true"
               android:layout_alignParentBottom="true"
               />
       </RelativeLayout>

       <RelativeLayout
           android:layout_width="200dp"
           android:layout_height="20dp"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="20dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#333333"
               android:text="起步价(15km)"
               android:textSize="12sp"
               android:layout_alignParentLeft="true"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#333333"
               android:text="199元"
               android:textSize="12sp"
               android:layout_alignParentRight="true"

               />
       </RelativeLayout>

       <RelativeLayout
           android:layout_width="200dp"
           android:layout_height="20dp"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="20dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#20b48b"
               android:text="超出里程费用"
               android:textSize="12sp"
               android:layout_alignParentLeft="true"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#20b48b"
               android:text="+199元"
               android:textSize="12sp"
               android:layout_alignParentRight="true"

               />
       </RelativeLayout>

   </LinearLayout>


    <RelativeLayout
        android:id="@+id/hint_dis_detail"
        android:layout_width="287dp"
        android:layout_height="21dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="84dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#AAAAAA" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="18dp"
            android:text="行驶里程"
            android:textColor="#999999"
            android:textSize="14sp"

            />

        <View
            android:layout_width="84dp"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#AAAAAA" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/hint_dis_detail"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="47.0"
            android:textSize="37sp"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:textColor="#333333"
            android:text="km"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>




        <Button
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_weixin"
            android:layout_width="287dp"
            android:layout_height="44dp"
            android:layout_marginBottom="120dp"
            android:background="@drawable/bg_btn_selector_new_way"
            android:clickable="true"
            android:text="提交"
            android:textColor="#fff"
            android:layout_alignParentBottom="true" />

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_zhifubao"
        android:layout_width="287dp"
        android:layout_height="44dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bg_btn_selector_new_way"
        android:clickable="true"
        android:text="提交"
        android:textColor="#fff"
        android:layout_alignParentBottom="true" />



</RelativeLayout>